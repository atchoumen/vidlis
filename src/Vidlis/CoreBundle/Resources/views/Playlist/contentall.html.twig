{% include 'VidlisCoreBundle:Default:sidebar.html.twig' %}

<div id="right_content">
    <div class="navbar">
        <div class="navbar-inner">
            <ul class="nav">
                <li class="active">
                    <a href="{{ url('_homePlaylistsAll') }}" onclick="loadBox('/playlists/all');  return false;">Toutes les playlists</a>
                </li>
                <li>
                    <a href="{{ url('_homePlaylists') }}" onclick="loadBox('/playlists');  return false;">Mes playlists</a>
                </li>
                {% if connected %}
                    <li>
                        <a href="{{ url('_homePlaylistsFavorite') }}" onclick="loadBox('/playlists/favoris');  return false;">Mes playlists favorites</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>

    <div class="publicity">
        <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
        <!-- Playlist -->
        <ins class="adsbygoogle"
             style="display:inline-block;width:728px;height:90px"
             data-ad-client="ca-pub-8877688962043608"
             data-ad-slot="9005035845"></ins>
        <script>
            (adsbygoogle = window.adsbygoogle || []).push({});
        </script>
    </div>

    {% for playlist in playlists %}
        <div class="box330 box-boreder" id="{{ playlist.id }}">
            <div class="boxHeader"><h2>{{ playlist.name }}</h2><div class="playlistCreatorName">Par {{ playlist.user.username }}</div></div>
            <div class="boxBody mCustomScrollbarActiv">
                {% for item in playlist.items %}
                    <div class="rowItem{% if (loop.index/2)|isFloat == false %} pair{% endif %}">
                        <div class="itemNumber">{{ loop.index }}</div>
                        <div class="videoName" data-id="{{ item.idVideo }}">{{ item.videoName }}</div>
                        <div class="videoDuration">{{ item.videoDuration }}</div>
                        <div class="playButtonRow" data-id="{{ item.idVideo }}"><i class="icon play blue"></i></div>
                    </div>
                {% endfor %}
            </div>
            <div class="boxFooter dark">
                {% if connected %}
                    {% if playlist.user.id != user.id %}
                        <a href="{{ path('_addFavoritePlaylist', {'idPlaylist': playlist.id}) }}" class="toModal addToFavorite"><i class="icon heart blue"></i></a>
                    {% endif %}
                {% endif %}
                <a href="#" class="btn gray loadPlaylist" data-idplaylist="{{ playlist.id }}">Ã©couter</a>
            </div>
        </div>
    {% endfor %}
</div>