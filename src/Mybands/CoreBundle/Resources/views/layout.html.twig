        <script type="text/javascript" src="{{ asset('bundles/mybands/js/master.js') }}"></script>
    	<script>
	(function () {
		$.address.crawlable(1).state('/mybandSymfony/web/app_dev.php').init(function () {
		}).change(function (e) {
			$.address.state() + decodeURI(e.path).replace(/\/\//, '/');
			show('loading');
			$.ajax({
				url: 'http://localhost/mybandSymfony/web/app_dev.php'+e.path,
				type: 'POST',
				dataType: 'json',
				cache: true,
				success: function (data, textStatus, jqXHR) {
					document.title = data.title;
					$('#content').html(data.content);
					hide('loading');
                                        $(".mCustomScrollbar").each(function() {
                                                $(this).mCustomScrollbar(
                                                        {scrollInertia: 0}
                                                );
                                        });
				},
				error: function (jqXHR, textStatus, errorThrown) {
					alert(textStatus);
				}
			});
		});
	})();
        </script>
